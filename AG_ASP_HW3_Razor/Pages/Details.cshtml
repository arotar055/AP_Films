@page "{id:int}"
@model AP_Films.Pages.DetailsModel
@{
    ViewData["Title"] = "Детали: " + Model.Movie.Title;
}
<div class="container mt-4">
    <div class="card film-card">
        <div class="row g-0">
            <div class="col-auto poster-frame">
                <img src="@Model.Movie.Poster" alt="@Model.Movie.Title Poster">
            </div>
            <div class="col">
                <div class="card-body">
                    <h5 class="card-title">@Model.Movie.Title (@Model.Movie.Year)</h5>
                    <p><strong>Режиссер:</strong> @Model.Movie.Director</p>
                    <p><strong>Жанр:</strong> @Model.Movie.Genre</p>
                    <p><strong>Описание:</strong> @Model.Movie.Description</p>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-3">
        <a class="btn btn-secondary" asp-page="Index">Вернуться на главную</a>
    </div>
</div>